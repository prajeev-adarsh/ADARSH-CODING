def factorial(n):
    # Base case: factorial of 0 is 1
    if n == 0:
        return 1
    
    # Initialize the result
    result = 1
    
    # Calculate the factorial iteratively
    for i in range(1, n + 1):
        result *= i
    
    return result

def nPr(n, r):
    # Calculate nPr using the formula
    return factorial(n) // factorial(n - r)

# Example usage:
# n = 5
# r = 2
# print(nPr(n, r))
